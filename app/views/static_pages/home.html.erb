<% if user_signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1><%= t('default.titles.application') %></h1>

    <h2>
      現場に関する情報はすべてお任せ
    </h2>

    <%= link_to t('user.sign_up', user_model_name: t('activerecord.models.user')), new_user_registration_path, class: "btn btn-large btn-primary" %>
  </div>

<% end %>
